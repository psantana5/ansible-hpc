# prometheus.yml.j2

global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets:
          # - alertmanager:9093

rule_files:
  # - "first_rules.yml"

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:9090"]

  - job_name: "node_exporter"
    static_configs:
      - targets:
{% for host in groups['slurm'] %}
        # This line needs to be indented correctly relative to 'targets:'
        - "{{ hostvars[host]['ansible_host'] }}:9100"
{% endfor %}

  - job_name: "slurm_exporter"
    static_configs:
      - targets:
{% for host in groups['slurmctld'] %}
        - "{{ hostvars[host]['ansible_host'] }}:9092"
{% endfor %}

  - job_name: "proxmox_vms_power"
    static_configs:
      - targets:
{% for host in groups['proxmox'] %}
        - "{{ hostvars[host]['ansible_host'] }}:9200"
{% endfor %} 
# HPC Cluster Backup Configuration
# Generated by Ansible

# Backup directories
BACKUP_BASE_DIR="{{ backup_base_dir }}"
BACKUP_SCRIPT_DIR="{{ backup_script_dir }}"
BACKUP_LOG_DIR="{{ backup_log_dir }}"

# Backup retention
BACKUP_RETENTION_DAYS={{ backup_retention_days }}

# User directories to backup
USER_DIRS=({% for dir in backup_user_dirs %}"{{ dir }}" {% endfor %})

# Configuration directories to backup
CONFIG_DIRS=({% for dir in backup_config_dirs %}"{{ dir }}" {% endfor %})

# Database configuration
SLURM_DB_NAME="{{ backup_databases[0].name }}"
SLURM_DB_USER="{{ backup_databases[0].user }}"
SLURM_DB_HOST="{{ backup_databases[0].host }}"

# Rsync options
RSYNC_OPTIONS="{{ backup_rsync_options }}"